:host {
  display: block;
  width: 100%;
  min-height: 300px;

  --datepicker-background-color: #FFF;
  --datepicker-today-background-color: #E6E6E6;
  --datepicker-month-color: rgba(0, 0, 0, 0.38);
  --datepicker-width: 294px;
  --datepicker-zindex: 1000;
  --datepicker-cells-color: #DDD;
  --datepicker-hover-color: rgba(0, 0, 0, 0.04);
  --datepicker-selected-color: rgba(0, 0, 0, 0.04);
  --datepicker-cellempty-color: #FFF;
  --datepicker-buttons-hover: rgba(0, 0, 0, 0.1);
  --datepicker-buttons-focus: rgba(0, 0, 0, 0.38);
  --datepicker-font-color: var(--palette-primary-main);
}

.datepicker {
  padding: 2px;
  margin-top: 10px;
  z-index: var(--datepicker-zindex);
  width: var(--datepicker-width);
  color: var(--datepicker-font-color);
  background-color: var(--datepicker-background-color);
  border-radius: 3px;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.4);
}

div#month-wrap {
  height: 30px;
}

div#bn_prev {
  float: left;
  width: 40px;
  height: 40px;
}

div#bn_prev::before {
  content: '\003c';
  font-family: var(--typography-fontFamily);
  height: 24px;
  font-size: var(--main-font-subheader-size);
  font-weight: 500;
  font-style: normal;
  position: relative;
  top: 5px;
  left: 12px;
}

div#bn_next {
  float: right;
  width: 40px;
  height: 40px;
}

div#bn_next::before {
  content: '\003e';
  font-family: var(--typography-fontFamily);
  height: 24px;
  font-size: var(--main-font-subheader-size);
  font-weight: 500;
  font-style: normal;
  position: relative;
  top: 5px;
  left: 12px;
}


div#bn_prev:hover,
div#bn_prev:focus,
div#bn_next:hover,
div#bn_next:focus {
  background-color: var(--datepicker-buttons-hover);
  border-radius: 20px;
  outline: none;
}

img.bn_img {
  margin: 0;
  padding: 2px;
}

div#month {
  float: left;
  padding-top: 6px;
  width: 199px;
  height: 24px;
  text-align: center;
  font-weight: bold;
  font-size: var(--main-font-medium-text-size);
}

table#cal {
  width: 290px;
  font-size: var(--main-font-medium-text-size);
  text-align: center;
  border-collapse: seperate;
  table-layout: fixed;
  outline: none;
}

table#cal th,
table#cal td {
  width: 38px;
  height: 38px;
  padding: 0;
  border: 1px solid rgba(0, 0, 0, 0);
}

table#cal thead th {
  border-bottom: 1px solid rgba(0, 0, 0, 0.12);
  margin-bottom: 2px;
}

table#cal td {
  cursor: pointer;
}

table#cal td.today {
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.12);
  background: var(--datepicker-today-background-color);
}

table#cal td.disabled {
  color: #999;
}

table#cal td.empty,
table#cal td.disabled {
  background-color: var(--datepicker-cellempty-color);
}

table#cal td:hover {
  border: 1px solid rgba(0, 0, 0, 0.12);
  border-radius: 20px;
}

table#cal td.focus {
  background-color: var(--datepicker-hover-color);
  border-color: var(--datepicker-hover-color);
  border-radius: 20px;
}

table#cal td.selectedDay {
  background-color: rgba(119, 211, 83, 0.32);
  border-color: #77D353;
  border-radius: 20px;
}

table#cal td.empty:hover,
table#cal td.disabled:hover {
  background-color: var(--datepicker-cellempty-color);
  border: none;
  cursor: default;
}

.offscreen {
  position: absolute;
  left: -200em;
  top: -100em;
}

[aria-hidden='true'] {
  display: none;
}

abbr {
  text-decoration: none;
}
